<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".log_in"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/white">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to KNEET"
        android:layout_marginTop="75dp"
        android:textSize="30dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="75sp"
        android:text="Username or Email"
        android:textSize="17dp"
        android:layout_marginBottom="-10dp"
        android:textStyle="bold"

        />



    <EditText
        android:id="@+id/inputuser"
        android:drawablePadding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="alisha@example.com"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        app:backgroundTint="#9FC4C1C1"
        android:paddingBottom="10dp"
        android:layout_marginTop="5sp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10sp"
        android:text="Enter Password"
        android:textSize="17dp"
        android:layout_marginBottom="-10dp"
        android:textStyle="bold"


        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <EditText
        android:drawablePadding="10sp"
        android:id="@+id/et_input_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:drawableLeft="@drawable/ic_baseline_lock_open_24"
        app:backgroundTint="#9FC4C1C1"
        android:layout_marginTop="0sp"
        android:paddingBottom="10dp"
        android:inputType="textPassword" />
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/ivPasswordToggle"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_remove_red_eye_24"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>






    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="Remember me"
            android:buttonTint="#FE904C"
            android:layout_marginTop="-5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/forgetlink"
            android:layout_height="wrap_content"
            android:text="Forget Password ?"
            android:textSize="14dp"
          android:layout_toEndOf="@+id/checkBox1"
            android:textColor="#FE904C"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="11dp"/>

    </RelativeLayout>



    <Button
        android:id="@+id/button"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:padding="2dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:paddingBottom="10sp"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:background="@drawable/sale"
        android:textSize="18sp"
        app:backgroundTint="#FE904C" />





    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center" >

        <TextView
            android:id="@+id/txt_01"
            android:layout_width="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_height="30dp"
            android:text="New User ?"
            android:textSize="16dp"
            android:textColor="#939292"

            />


        <TextView
            android:id="@+id/bt_009"
            android:layout_width="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/txt_01"
            android:layout_marginLeft="3sp"
            android:textColor="#FE904C"
            android:textSize="17sp"
            android:text="Sign Up Now"
            android:layout_marginBottom="2sp"
            android:textStyle="bold"

            />

    </RelativeLayout>

</LinearLayout>